<h2><%= @schedule.title%></h2>

<tbody>
 <% @schedules.each do |schedule| %>
   <tr>
    <td><%= schedule.id %></td>
    <td><%= schedule.title %></td>
    <td><%= schedule.startdate.strftime("%Y/%m/%d") %></td>
    <td><%= schedule.enddate.strftime("%Y/%m/%d") %></td>
    <td><%= schedule.checkbox == true ? "○" : ""%> </td>
    <td><%= schedule.updated_at.strftime("%Y/%m/%d %H:%M" ) %></td>
    <td ><%= link_to "詳細", schedule%></td>
    <td><%= link_to "編集", [:edit,schedule]%></td>
    <td><%= link_to "削除", schedule,method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
   </tr>
 <% end %>
</tbody>
<table>
 <tr>
  <th>開始日</th>
  <td><%= @schedule.startdate.strftime("%Y/%m/%d") %></td>
 </tr>
  <tr>
  <th>終了日</th>
  <td><%= @schedule.enddate.strftime("%Y/%m/%d") %></td>
 </tr>
  <tr>
  <th>終日</th>
  <td>
  <% if @schedule.checkbox == true %>
   <div>○</div>
  <%else%>
   <div></div>
  <%end%>
  </td>
 </tr>
  <tr>
  <th>スケジュールメモ</th>
  <td><%= @schedule.memo %></td>
 </tr>
</table>

<div>
 <ul>
  <li><%= link_to"← 一覧にもどる",schedules_path%></li>
 </ul>
</div>